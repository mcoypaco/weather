{
    "name": "weather",
    "description": "A simple application that allows users get weather information based on the selected city.",
    "version": "0.0.0-development",
    "repository": {
        "type": "git",
        "url": "https://github.com/mcoypaco/weather.git"
    },
    "bugs": {
        "url": "https://github.com/mcoypaco/weather/issues"
    },
    "homepage": "https://github.com/mcoypaco/weather#readme",
    "release": {
        "branches": [
            {
                "name": "main"
            },
            {
                "name": "beta",
                "prerelease": true
            }
        ],
        "plugins": [
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false
                }
            ],
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/github", 
                {
                    "assets": [
                        {
                            "path": "dist/asset.min.css", 
                            "label": "CSS distribution"
                        },
                        {
                            "path": "dist/asset.min.js",
                            "label": "JS distribution"
                        }
                    ]
                }
            ]
        ]
    },
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "semantic-release": "semantic-release"
    },
    "devDependencies": {
        "@heroicons/vue": "^1.0.6",
        "@popperjs/core": "^2.10.2",
        "@semantic-release/github": "^8.0.7",
        "@tailwindcss/forms": "^0.5.2",
        "@vue/compat": "^3.1.0",
        "@vue/compiler-sfc": "^3.1.0",
        "autoprefixer": "^10.4.7",
        "axios": "^0.27.2",
        "bootstrap": "^5.1.3",
        "browser-sync": "^2.27.11",
        "browser-sync-webpack-plugin": "^2.3.0",
        "eslint": "^8.17.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-vue": "^9.1.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "luxon": "^2.4.0",
        "pinia": "^2.0.14",
        "postcss": "^8.4.14",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "semantic-release": "^19.0.5",
        "tailwindcss": "^3.0.24",
        "vue": "^3.1.0",
        "vue-loader": "^16.0.0"
    }
}
